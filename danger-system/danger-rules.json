{
    "rules": [
      {
        "id": "no-entitlements-changes",
        "severity": "error",
        "condition": {
          "type": "file-modified",
          "glob": "**/*.entitlements"  // Matches any .entitlements file in any folder
        },
        "message": "Changes to .entitlements files are not allowed without approval. This could affect app permissions."
      },
      {
        "id": "no-forced-unwrapping",
        "severity": "error",
        "condition": {
          "type": "diff-pattern",
          "fileGlob": "**/*.swift",  // Only check Swift files
          "regex": "(!\\s*\\w+|\\w+\\s*\\!)"  // Detects forced unwrapping (e.g., 'value!' or '!value')
        },
        "message": "Forced unwrapping ('!') detected in changes. Consider safer optional handling to avoid crashes."
      },
      {
        "id": "info-on-swift-changes",
        "severity": "info",
        "condition": {
          "type": "file-modified",
          "glob": "**/*.swift"  // Matches any Swift file
        },
        "message": "Swift files were modified. Remember to run unit tests!"
      }
    ]
  }